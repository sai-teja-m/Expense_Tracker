<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginHorizontal="10dp"

    >

    <FrameLayout
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        tools:ignore="MissingConstraints"
        card_view:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/edit_layout"
        >
        <TextView
            android:id="@+id/expense_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text = "Expense Title"
            android:layout_weight="1.5"
            style="@style/TextAppearance.Material3.BodyLarge"
            />
        <TextView
            android:id="@+id/expense"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text = "Price"
            app:layout_constraintStart_toEndOf="@+id/expense_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="textEnd"


            style="@style/TextAppearance.Material3.BodyLarge"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        >
        <TextView
            android:id="@+id/when"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/expense_title"
            tools:text="When date"
            android:layout_weight="1.5"
            style="@style/TextAppearance.Material3.BodyMedium"
        />

        <TextView
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/expense_title"
            tools:text="Category"
            android:layout_weight="1"
            android:textAlignment="textEnd"

            style="@style/TextAppearance.Material3.BodyMedium"
            />

<!--        <Button-->
<!--            android:id="@+id/edit_button"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:icon = "@drawable/ic_edit_expense"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_marginRight="16dp"-->
<!--            style="@style/Widget.MaterialComponents.Button.OutlinedButton"-->
<!--            />-->

<!--        <Button-->
<!--            android:id="@+id/delete_button"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginRight="8dp"-->
<!--            android:layout_weight="1"-->
<!--            app:icon = "@drawable/ic_delete_expense"-->
<!--            app:layout_constraintLeft_toRightOf="@+id/edit_button"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/expense"-->
<!--            style="@style/Widget.MaterialComponents.Button.OutlinedButton"-->
<!--            />-->
    </LinearLayout>


    </FrameLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/card_view"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/grey"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
